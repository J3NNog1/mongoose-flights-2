<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <h3>Airline:</h3>
    <%= flight.airline %>
    <h3>Airport:</h3>
    <%= flight.airport %>
    <h3>Flight No:</h3>
    <%= flight.flightNo %>
    <h3>Departure Date:</h3>
    <%= flight.departs.toDateString() %> 
    <a href="/flights/<%= flight._id %>/edit">
      <button>Edit Flight</button>
    </a>
  </section>
</main>

